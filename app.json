{
  "name": "Image Hosting Bot",
  "description": "A powerful Telegram bot for uploading images and receiving links.",
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token",
      "required": true
    },
    "MONGODB_URI": {  // Changed to MONGODB_URL to match your config
      "description": "Your MongoDB URI",
      "required": true
    },
    "BOT_IMAGE_URL": {  // Optional: Add this if you want to configure the bot image
      "description": "URL for the bot's image",
      "required": false
    }
  },
  "scripts": {
    "postdeploy": "pip install -r requirements.txt"
  },
  "addons": [
    "mongolab"  // Optional: If you want to use a MongoDB add-on on Heroku
  ],
  "website": "https://github.com/utkarshdubey2008/imagehost",  // Optional: Link to your GitHub repository
  "keywords": [
    "Telegram",
    "bot",
    "image hosting",
    "Python"
  ]
}
